<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/black"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Left side: Back arrow -->
        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEAT PACKING"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:gravity="center"

            android:textStyle="bold"/>


        <!-- Right side: Play button -->
        <ImageView
            android:id="@+id/playImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_play_arrow_24"
            android:contentDescription="Play" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F0F0F3"
        android:layout_below="@id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="20dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PLU"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="25dp"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:background="@color/black"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_alignEnd="@id/text1"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="20dp"
                app:cardCornerRadius="1dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:text="Chicken Curry Cut"
                        android:textSize="26dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:paddingTop="25dp"
                        android:paddingLeft="10dp"/>



                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="20dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:text="Tare"
                            android:textSize="26dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingTop="25dp"
                            android:paddingLeft="10dp"/>

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:background="@color/black"
                            android:text="5"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:layout_alignEnd="@id/text3"/>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="g"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="52dp"
                        android:layout_gravity="end"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="1dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:text="MRP"
                            android:textSize="26dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingTop="25dp"
                            android:paddingLeft="10dp"/>

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="85dp"
                            android:background="@color/black"
                            android:text="₹299.0"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:layout_alignEnd="@id/text4"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="20dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:text="Weight"
                            android:textSize="26dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingTop="25dp"
                            android:paddingLeft="10dp"/>

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:background="@color/black"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:layout_alignEnd="@id/text5"/>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="g"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="52dp"
                        android:layout_gravity="end"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="1dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:text="Price"
                            android:textSize="26dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingTop="25dp"
                            android:paddingLeft="10dp"/>

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:background="@color/black"
                            android:text="₹0"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:layout_alignEnd="@id/text6"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

